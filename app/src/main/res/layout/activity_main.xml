<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#d2d8e4">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/passport"
        android:layout_gravity="center"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="SABO Victor"
    android:layout_gravity="center"
    android:textSize="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="40dp"
    android:textStyle="bold"
    android:textColor="#000000"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   >


    <TextView
        android:id="@+id/skills"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Skills"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/adDev"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Android Developer"
        android:layout_below="@+id/skills"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/webDev"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Web Developer"
        android:layout_below="@+id/adDev"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/graphics"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Graphics"
        android:layout_below="@+id/webDev"
        android:textColor="#000000"
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

    <TextView
        android:id="@+id/contact"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="contact"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        />

        <ImageView
            android:id="@+id/phone"
            android:src="@drawable/phone501"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/contact"
            android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="08130341622"
        android:layout_toRightOf="@+id/phone"
        android:layout_below="@+id/contact"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        />

        <ImageView
            android:id="@+id/con"
            android:src="@drawable/letter50"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/phone"
            android:layout_marginBottom="7dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/con"
        android:layout_marginLeft="8dp"
        android:text="victor.sabo@hotmail.com"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        />


        <ImageView
            android:src="@drawable/office501"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/con"
            android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="CA 100001 Oregun"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@+id/con"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#000000"
        />

    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:background="#0d6383"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locate"
        android:background="#0d6383"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    </LinearLayout>
    </LinearLayout>